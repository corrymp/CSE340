<%# html %><%# body %><%# div#wrapper%><%# main %>
                <section id="login" class="account-page">
                    <h1><%- title %></h1>
                    <%- messages() %>
                    <form action="/login" method="post">
                        <label for="account_email">Email:</label>
                        <input type="email" name="account_email" id="account_email" placeholder="you@email.com" required>

                        <span class="label"><label for="account_password">Password</label><input type="checkbox" class="hover-reveal" title="show password requirments"></span>
                        <span class="input">
                            <input type="password" name="account_password" id="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" title="Passwords must be at least of 12 characters along with having the following: a number (0-9), an uppercase letter (A-Z), and a special character (such as & or #)" placeholder="Sw0rdf!sh" required>
                            <button class="show-pw" type="button">Show</button>
                        </span>
                        <div class="hover-show pw-req">Passwords must be at least of 12 characters along with having the following:
                            <ol>
                                <li>a number (0-9)</li>
                                <li>an uppercase letter (A-Z)</li>
                                <li>a "special" character (such as & or #)</li>
                            </ol>
                        </div>
                        
                        <button type="submit">LOGIN</button>
                    
                        <p>No account? <a href="/account/register">Sign-up</a></p>
                    </form>
                    <script src="/js/showpw.js"></script>
                </section>